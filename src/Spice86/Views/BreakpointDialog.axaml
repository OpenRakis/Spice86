<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Spice86.ViewModels"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        x:Class="Spice86.Views.BreakpointDialog"
        x:CompileBindings="True"
        x:DataType="viewModels:BreakpointDialogViewModel"
        Title="Create Breakpoint"
        MinWidth="400"
        MinHeight="200"
        SizeToContent="WidthAndHeight">
    <DockPanel Margin="16">
        <!-- Content -->
        <StackPanel DockPanel.Dock="Top" Spacing="12">
            <!-- Address (read-only) -->
            <StackPanel Spacing="4">
                <Label Content="Address:" />
                <TextBox Text="{Binding Address}" IsReadOnly="True" />
            </StackPanel>
            
            <!-- Condition (editable) -->
            <StackPanel Spacing="4">
                <Label Content="Condition (optional):" />
                <TextBox Text="{Binding Condition}" 
                         Watermark="e.g., ax == 0x1234"
                         AcceptsReturn="False" />
            </StackPanel>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel DockPanel.Dock="Bottom" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Spacing="8"
                    Margin="0,16,0,0">
            <Button Content="OK" 
                    Command="{Binding OkCommand}"
                    IsDefault="True"
                    Width="80" />
            <Button Content="Cancel" 
                    Command="{Binding CancelCommand}"
                    IsCancel="True"
                    Width="80" />
        </StackPanel>
    </DockPanel>
</Window>
