<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Spice86.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="viewModels:MemoryBitmapViewModel"
             x:Class="Spice86.Views.MemoryBitmapView">
  <Grid RowDefinitions="Auto,*">
    <Button Grid.Row="0" Content="Save..." Command="{Binding SaveCommand}" Margin="5,0,0,0"/>
	<Image Grid.Row="1"
		RenderOptions.BitmapInterpolationMode="None"
		Source="{Binding Bitmap}" />
  </Grid>
</UserControl>
